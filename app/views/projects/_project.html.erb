<div class="project bg-white shadow-sm mt-3">
  <div class="d-flex justify-content-between align-items-center px-4 py-2">
    <div class="project__title font-weight-bold">
      <%= project.name %>
    </div>
    <div class="d-flex">
      <%= link_to edit_project_url(project),
        class: 'action-button project__edit-button p-2',
        remote: true do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to project,
        method: :delete,
        class: 'action-button project__delete-button p-2',
        remote: true do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </div>
  <div class="tasks border-top">
    <div class="d-flex px-4 py-2">
      <%= render "tasks/form", task: Task.new, project: project %>
    </div>
    <%= render project.tasks %>
  </div>
</div>
