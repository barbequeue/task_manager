<div class="project shadow-sm my-3">
  <div class="d-flex h-100 justify-content-between align-items-center px-4">
    <div class="project__title font-weight-bold">
        <%= project.name %>
    </div>
    <div class="d-flex">
      <%= link_to edit_project_url(project),
        class: 'project__action-button project__edit-button p-2',
        remote: true do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to project,
        method: :delete,
        class: 'project__action-button project__delete-button p-2',
        remote: true do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>
