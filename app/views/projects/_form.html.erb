<%= form_with(model: project, html: { class: 'project__form form-inline', autocomplete: 'off' }) do |f| %>
  <%= f.text_field :name,
    placeholder: 'Имя проекта',
    class: 'form-control form__text-input rounded-0 px-0' %>
  <%= f.submit class: 'btn btn-success rounded-0 shadow-sm ml-sm-3 mt-3 mt-sm-0' %>
<% end %>
