<div class="task">
  <div class="d-flex justify-content-between align-items-center px-4 py-2">
    <div class="d-flex align-items-center">
      <div class="task__form-container d-none">
      </div>
      <div class="task__checkbox">
        <%= render 'tasks/checkbox', task: task %>
      </div>
      <div class="task__title ml-3 text-truncate">
        <%= task.name %>
      </div>
    </div>
    <div class="d-flex align-items-center">
      <p class="task__expire-date small mb-0 mr-3 text-muted">
        <%= task&.expires %>
      </p>
      <%= link_to edit_project_task_url(task.project, task),
        class: 'action-button task__edit-button p-2',
        remote: true do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to project_task_url(task.project, task),
        method: :delete,
        class: 'action-button task__delete-button p-2',
        remote: true do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>
