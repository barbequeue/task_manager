<%= form_with(model: task, url: task_action_url(project, task), html: { class: 'task__form form-inline align-items-start', autocomplete: 'off' }) do |f| %>
  <div>
    <%= f.text_field :name,
      placeholder: 'Name',
      class: 'form-control form__text-input rounded-0 px-0' %>
    <div class="form__error-message small"></div>
  </div>
  <%= f.date_field :expires, class: 'form-control form__date-input rounded-0 px-0 ml-sm-3 position-relative' %>
  <%= f.submit class: 'btn btn-success rounded-0 shadow-sm ml-sm-3 mt-3 mt-sm-0' %>
<% end %>
