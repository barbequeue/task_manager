<header class="header bg-white shadow-sm">
  <div class="container py-2">
    <div class="d-flex justify-content-end">
      <% if user_signed_in? %>
        <div class="dropdown show">
          <a class="btn btn-secondary rounded-0 shadow-sm dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="false" aria-expanded="false">
            <%= current_user.email %>
          </a>

          <div class="dropdown-menu">
            <%= link_to "Projects", projects_url, class: 'dropdown-item' %>
            <%= link_to "Settings", edit_user_registration_url, class: 'dropdown-item' %>
            <div class="dropdown-divider"></div>
            <%= link_to "Log Out", destroy_user_session_url, method: :delete, class: 'dropdown-item' %>
          </div>
        </div>
      <% else %>
        <nav class="nav">
          <%= link_to "Log In", new_user_session_url, class: 'nav-link' %>
          <%= link_to "Sign Up", new_user_registration_url, class: 'nav-link' %>
        </nav>
      <% end %>
    </div>
  </div>
</header>
