<div class="d-flex justify-content-center mt-5">
  <div class="user-auth-form flex-grow-1 bg-white shadow-sm p-4">
    <h2 class="text-center mb-4">Настройки аккаунта</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, autocomplete: 'off' }) do |f| %>
      <div class="mb-4">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, placeholder: 'Email', class: 'form-control form__text-input rounded-0 px-0' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Ожидается подтверждение для: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.password_field :password, placeholder: 'Новый пароль', class: 'form-control form__text-input rounded-0 px-0' %>
        <% if @minimum_password_length %>
          <small>минимальная длина: <%= @minimum_password_length %></small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: 'Новый пароль ещё раз', class: 'form-control form__text-input rounded-0 px-0' %>
      </div>

      <div class="form-group">
        <%= f.password_field :current_password, placeholder: 'Старый пароль', class: 'form-control form__text-input rounded-0 px-0' %>
      </div>

      <%= f.submit "Сохранить", class: 'btn btn-block btn-primary rounded-0 shadow-sm mt-4' %>
    <% end %>

    <hr class="my-4" />

    <%= button_to "Деактивировать аккаунт", registration_path(resource_name), method: :delete, class: 'btn btn-block btn-danger rounded-0 shadow-sm' %>

    <div class="d-flex justify-content-center mt-4">
      <%= link_to "Назад", :back %>
    </div>
  </div>
</div>
